<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Main muscles</th>
      <th>Bodypart</th>
      <th>Force</th>
      <th>Mechanics type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= link_to exercise.name, exercise %></td>
        <td><%= exercise.main_muscles %></td>
        <td><%= exercise.bodypart %></td>
        <td><%= exercise.force %></td>
        <td><%= exercise.mechanics_type %></td>
        <td></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

