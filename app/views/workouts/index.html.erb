<p id="notice"><%= notice %></p>
<%= link_to 'New Workout', new_workout_path, class: 'btn btn-primary' %>

<h1>My Workouts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= link_to workout.date.to_date, workout %></td>
        <td><%= workout.notes %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


